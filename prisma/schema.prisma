generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                       String                  @id @default(cuid())
  name                     String?
  email                    String?                 @unique
  emailVerified            DateTime?
  image                    String?
  hasCompletedScheduleTour Boolean                 @default(false)
  hasCompletedWriteTour    Boolean                 @default(false)
  accounts                 Account[]
  bulletins                Bulletin[]
  events                   Event[]
  goals                    Goal[]
  sessions                 Session[]
  documents                Document[]
  reminders                Reminder[]
  goalText                 String                  @default("")
  assistantName            String                  @default("AI Life Assistant")
  dailySummaryCaches       DailySummaryCache[]
  /// Timestamp of the user's last successful login
  lastLoginAt              DateTime?
  /// Timestamp when the user last dismissed the product updates modal
  lastSeenUpdatesAt        DateTime?
  DailySuggestionsCache    DailySuggestionsCache[]
  createdAt                DateTime                @default(now())

  // Stripe & Subscription fields
  stripeCustomerId       String?   @unique
  stripeSubscriptionId   String?   @unique
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?
  subscriptionStatus     String?   @default("free") // "free", "active", "canceled", "past_due"

  // Usage tracking
  weeklyPremiumUsesResetAt  DateTime?
  monthlyPremiumUsesResetAt DateTime?
  weeklyPremiumUsesCount    Int       @default(0)
  monthlyPremiumUsesCount   Int       @default(0)

  // Habit Learning
  habitLearningEnabled  Boolean        @default(true)
  lastHabitRefinementAt DateTime?
  eventActions          EventAction[]
  habitProfiles         HabitProfile[]
  habitClusters         HabitCluster[]

  // Google Calendar Sync
  googleCalendarSyncEnabled     Boolean   @default(false)
  googleCalendarId              String?
  googleCalendarSyncToken       String?
  googleCalendarLastSyncAt      DateTime?
  googleCalendarWatchChannelId  String?
  googleCalendarWatchExpiration DateTime?
  syncedEvents                  SyncedEvent[]
  shortcuts                     Shortcut[]
  memories                      UserMemory[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Event {
  id     String   @id @default(cuid())
  title  String
  start  DateTime
  end    DateTime
  userId String
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  links  String[] @default([])

  @@index([userId, start])
  @@index([userId, end])
}

model Bulletin {
  id        String   @id @default(cuid())
  title     String
  content   String
  type      String   @default("text")
  data      Json?
  schema    Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, updatedAt])
  @@index([userId, type, updatedAt])
}

model Goal {
  id        String   @id @default(cuid())
  title     String
  type      GoalType @default(DAILY)
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type, createdAt])
}

model Document {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  context   String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, updatedAt])
}

model Reminder {
  id            String   @id @default(cuid())
  text          String
  time          DateTime
  isAISuggested Boolean  @default(false)
  isRead        Boolean  @default(false)
  createdAt     DateTime @default(now())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead, time])
}

enum GoalType {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}

/// Cache of generated daily summaries by user, timezone, and local day
model DailySummaryCache {
  id         String   @id @default(cuid())
  userId     String
  timezone   String
  dayKey     String /// e.g. "2025-06-30" in user's timezone
  eventsHash String
  summary    String   @db.Text
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, timezone, dayKey])
  @@index([userId])
}

/// Changelog entries for informing users about new features
model ProductUpdate {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  publishedAt DateTime @default(now())
  isPublished Boolean  @default(true)

  @@index([isPublished, publishedAt])
}

/// Cache of generated daily suggestions (events + reminders) by user, timezone, and local day
model DailySuggestionsCache {
  id         String   @id @default(cuid())
  userId     String
  timezone   String
  dayKey     String /// e.g. "2025-06-30" in user's timezone
  eventsHash String
  payload    String   @db.Text /// JSON string with { events: [], reminders: [] }
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, timezone, dayKey])
  @@index([userId])
}

/// Lightweight event tracking for all calendar interactions
model EventAction {
  id         String   @id @default(cuid())
  userId     String
  eventId    String?
  actionType String /// created, updated, deleted, accepted, rejected
  eventTitle String
  eventStart DateTime
  eventEnd   DateTime
  recordedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, recordedAt])
  @@index([userId, actionType, recordedAt])
}

enum HabitType {
  MEAL
  WORKOUT
  MEETING
  COMMUTE
  WORK_BLOCK
  PERSONAL
}

enum ShortcutTargetType {
  DOCUMENT
  BULLETIN
}

model Shortcut {
  id         String             @id @default(cuid())
  userId     String
  targetType ShortcutTargetType
  targetId   String
  x          Float
  y          Float
  createdAt  DateTime           @default(now())
  updatedAt  DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, targetType, targetId])
}

/// Real-time per-user habit statistics
model HabitProfile {
  id                String    @id @default(cuid())
  userId            String
  habitType         HabitType
  timeSlotHistogram Json /// JSON object for histogram data
  centroid          Json /// JSON with avgHour, avgMinute, avgDuration
  count             Int       @default(0)
  confidenceScore   Float     @default(0.0)
  lastUpdatedAt     DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, habitType])
  @@index([userId])
}

/// Batch-refined semantic clusters
model HabitCluster {
  id             String   @id @default(cuid())
  userId         String
  clusterLabel   String
  exemplarTitle  String
  embedding      Json /// JSON array of embedding vector
  memberEventIds String[] @default([])
  createdAt      DateTime @default(now())
  lastRefinedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

/// Track batch job execution
model BackgroundJobLog {
  id             String    @id @default(cuid())
  jobType        String
  startedAt      DateTime  @default(now())
  completedAt    DateTime?
  status         String /// pending, running, completed, failed
  processedCount Int       @default(0)
  errorMessage   String?   @db.Text

  @@index([jobType])
  @@index([startedAt])
}

/// Track Google Calendar sync state for events
model SyncedEvent {
  id              String   @id @default(cuid())
  userId          String
  localEventId    String   @unique
  googleEventId   String
  googleCalendarId String
  lastSyncedAt    DateTime @default(now())
  syncHash        String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, googleEventId])
  @@index([userId, googleCalendarId])
}

/// Multi-layer memory system for AI assistant personalization
model UserMemory {
  id        String    @id @default(cuid())
  userId    String
  type      String    /// "daily" | "longterm" | "profile"
  date      DateTime? /// For daily memories only (stores the date in user's timezone)
  content   String    @db.Text
  metadata  Json?     /// For structured data (profile fields, importance, etc.)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type, date]) /// One daily memory per day, one longterm, one profile
  @@index([userId, type])
  @@index([userId, date])
}
