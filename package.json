{
  "name": "schematic",
  "version": "0.1.0",
  "private": false,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:electron": "next build",
    "start": "next start",
    "start:electron": "cross-env NODE_ENV=production next start --port 3001",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron-build": "npm run build:electron && electron-builder",
    "electron-start": "electron .",
    "dist": "npm run build:electron && electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.17",
    "@ai-sdk/google": "^2.0.7",
    "@ai-sdk/openai": "^2.0.17",
    "@ai-sdk/perplexity": "^2.0.15",
    "@auth/prisma-adapter": "^2.7.4",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@fullcalendar/core": "^6.1.15",
    "@fullcalendar/daygrid": "^6.1.15",
    "@fullcalendar/interaction": "^6.1.15",
    "@fullcalendar/react": "^6.1.15",
    "@fullcalendar/timegrid": "^6.1.15",
    "@google/generative-ai": "^0.21.0",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.3.1",
    "@tiptap/extension-text-align": "^2.14.0",
    "@tiptap/extension-text-style": "^2.11.5",
    "@tiptap/extension-underline": "^2.11.5",
    "@tiptap/react": "^2.11.5",
    "@tiptap/starter-kit": "^2.11.5",
    "ai": "^5.0.19",
    "d3-force": "^3.0.0",
    "d3-hierarchy": "^3.1.2",
    "d3-selection": "^3.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "electron-updater": "^6.2.1",
    "formidable": "^3.5.1",
    "framer-motion": "^12.4.0",
    "googleapis": "^164.1.0",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.474.0",
    "motion": "^12.9.4",
    "next": "15.3.8",
    "next-auth": "^4.24.11",
    "next-themes": "^0.4.6",
    "nextstepjs": "^2.0.0",
    "node-ical": "^0.18.0",
    "openai": "^4.103.0",
    "posthog-js": "^1.250.2",
    "posthog-node": "^5.0.0",
    "prisma": "^6.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-force-graph-2d": "^1.27.1",
    "react-force-graph-3d": "^1.26.1",
    "react-markdown": "^10.1.0",
    "react-speech-recognition": "^4.0.1",
    "react-switch": "^7.1.0",
    "remark-gfm": "^4.0.1",
    "stripe": "^19.1.0",
    "use-debounce": "^10.0.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/d3-force": "^3.0.10",
    "@types/formidable": "^3.4.5",
    "@types/next-auth": "^3.15.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-speech-recognition": "^3.9.6",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.schematic.app",
    "productName": "Schematic",
    "publish": [
      {
        "provider": "github",
        "owner": "TN0123",
        "repo": "Schematic"
      }
    ],
    "files": [
      "electron/**/*",
      ".next/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json",
      "next.config.ts",
      "prisma/**/*",
      ".env*"
    ],
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "prisma",
        "to": "prisma"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
